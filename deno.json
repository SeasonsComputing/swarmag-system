{
  "imports": {
    "@domain/": "./source/domain/",
    "@utils/": "./source/utils/",
    "@serverless-lib/": "./source/serverless/lib/",
    "@serverless-functions/": "./source/serverless/functions/",
    "@serverless-mappings/": "./source/serverless/mappings/",
    "@std/assert": "https://deno.land/std@0.224.0/assert/mod.ts",
    "@supabase/supabase-js": "https://esm.sh/@supabase/supabase-js@2",
    "@tests-fixtures/": "./source/tests/fixtures/",
    "@tests-helpers/": "./source/tests/api/helpers/"
  },
  "tasks": {
    "guard:architecture": "deno run --allow-read scripts/architecture-guard.ts",
    "guard:env": "deno run --allow-read scripts/env-guard.ts",
    "guard:leaf": "deno run --allow-read scripts/leaf-guard.ts",
    "guard:validation": "deno run --allow-read scripts/validation-guard.ts",
    "check": "deno task guard:architecture && deno task guard:env && deno task guard:leaf && deno task guard:validation && deno check source/**/*.ts && deno task lint",
    "test": "deno test --allow-env --allow-net --allow-read \"source/tests/**/*-test.ts\"",
    "lint": "deno lint source && deno task lint:md",
    "lint:md": "deno run --allow-read --allow-sys --allow-env npm:markdownlint-cli2@0.13.0 \"**/*.md\" \"!node_modules/**\"",
    "fmt": "deno run -A npm:dprint fmt",
    "fmt:check": "deno run -A npm:dprint check"
  },
  "fmt": {
    "exclude": ["**/*"]
  }
}
