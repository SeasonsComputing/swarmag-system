{
  "imports": {
    "@utils": "./source/utilities/mod.ts",
    "@utils/": "./source/utilities/",

    "@domain/": "./source/domain/",

    "@back-config/": "./source/back/config/",
    "@back-functions/": "./source/back/functions/",
    "@back-lib/": "./source/back/library/",

    "@ux-api/": "./source/ux/api/",
    "@ux-app-ops/": "./source/ux/applications/operations/",
    "@ux-app-admin/": "./source/ux/applications/administration/",
    "@ux-app-customer/": "./source/ux/applications/customer/",
    "@ux-components/": "./source/ux/applications/components/",
    "@ux-lib/": "./source/ux/applications/library/",

    "@devops": "./source/devops/",
    "@tests": "./source/tests/"
  },
  "tasks": {
    "guard:architecture": "deno run --allow-read devops/architecture-guard.ts",
    "guard:env": "deno run --allow-read devops/env-guard.ts",
    "guard:leaf": "deno run --allow-read devops/leaf-guard.ts",
    "guard:validation": "deno run --allow-read devops/validation-guard.ts",

    "check": "deno task guard:architecture && deno task guard:env && deno task guard:leaf && deno task guard:validation && deno check source/**/*.ts && deno task lint",
    "test": "deno test --allow-env --allow-net --allow-read \"source/tests/**/*-test.ts\"",
    "lint": "deno lint source && deno task lint:md",
    "lint:md": "deno run --allow-read --allow-sys --allow-env npm:markdownlint-cli2@0.13.0 \"**/*.md\" \"!node_modules/**\"",
    "fmt": "dprint fmt",
    "fmt:check": "dprint check"
  },
  "fmt": {
    "exclude": [
      "**/*"
    ]
  }
}
